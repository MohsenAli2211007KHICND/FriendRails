<div id="<%= dom_id friend %>">    


<div class="card text-center">
  <div class="card-header">
    <h1><%= friend.first_name %> <%= friend.last_name %></h1>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= friend.phone %></h5>
    <p class="card-text"><%= friend.email %>  |  <%= friend.twitter %> </p>
    <%= button_to "Destroy this friend", @friend, method: :delete,  class:'btn btn-danger ' %>
  </div>
  <div class="card-footer text-body-secondary">
   <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-info'  %>
  <%= link_to "Back to friends", friends_path, class:'btn btn-secondary' %>
    </div>
</div>
</div>
